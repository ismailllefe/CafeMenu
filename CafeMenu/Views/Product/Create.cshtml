@model CafeMenu.Models.Product

<div class="row">
    <div class="col-lg-6">
        <div class="card-style settings-card-2 mb-30">
            <form action="/Product/Create" method="post">
                <div class="row">
                    <div class="col-6">
                        <div class="input-style-1">
                            <label>Name</label>
                            <input type="text" id="ProductName" name="ProductName" placeholder="ProductName" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-style-1">
                            <label>Category</label>
                            <div class="select-style-1">
                                <div class="select-position">
                                    <select id="CategoryID" name="CategoryID" class="light-bg">
                                        @foreach (var item in ViewBag.Categories)
                                        {
                                            <option value="@item.CategoryID">@item.CategoryName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-style-1">
                            <label>Price</label>
                            <input type="number" id="Price" name="Price" placeholder="Price" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-style-1">
                            <label>ImagePath</label>
                            <input type="text" id="Price" name="ImagePath" placeholder="ImagePath" />
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


