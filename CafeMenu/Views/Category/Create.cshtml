@model CafeMenu.Models.Category

@{
    ViewBag.Title = "Add Category";
}

    <div class="row">
        <div class="col-lg-6">
            <div class="card-style settings-card-2 mb-30">
                <form action="/Category/Create" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="input-style-1">
                                <label>Category Name</label>
                                <input type="text" id="CategoryName" name="CategoryName" placeholder="Category Name" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="input-style-1">
                                <label>Category Name</label>
                                <input type="number" id="ParentCategoryID" name="ParentCategoryID" placeholder="Parent Category ID" />
                            </div>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>


