@model CafeMenu.Models.ProductProperty

<h2>Edit Product Property</h2>

@using (Html.BeginForm("Edit", "ProductProperty", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ProductPropertyID)

    <div class="form-group">
        @Html.LabelFor(m => m.ProductID)
        @Html.DropDownListFor(m => m.ProductID, new SelectList(ViewBag.Products, "ProductID", "ProductName", Model.ProductID), "Select a Product", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProductID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PropertyID)
        @Html.DropDownListFor(m => m.PropertyID, new SelectList(ViewBag.Properties, "PropertyID", "Key", Model.PropertyID), "Select a Property", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PropertyID, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "ProductProperty")" class="btn btn-secondary">Cancel</a>
}