@model CafeMenu.Models.User
@{
    ViewBag.Title = "Edit";
}


    <div class="row">
        <div class="col-lg-6">
            <div class="card-style settings-card-2 mb-30">
                <form action="/User/Edit" method="post">
                    <input type="hidden" name="UserID" value="@Model.UserID" />

                    <div class="row">
                        <div class="col-6">
                            <div class="input-style-1">
                                <label>Name</label>
                                <input type="text" id="Name" name="Name" placeholder="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-style-1">
                                <label>Surname</label>
                                <input type="text" id="Surname" name="Surname" placeholder="Surname" value="@Model.Surname" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-style-1">
                                <label>User Name</label>
                                <input type="text" id="Username" name="Username" placeholder="Username" value="@Model.Username" />
                            </div>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>


